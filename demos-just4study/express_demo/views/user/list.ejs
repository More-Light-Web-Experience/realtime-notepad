<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
      <style type="text/css">
          table { border:1px solid green;}
          table thead tr th,table tbody tr td{ border:1px solid #eee;text-align: left;}
          table tbody tr td a{ color: #333333;}
      </style>
  </head>
  <body>
  <p><a href="add">add user</a></p>
  <table class="user-list">
      <thead>
      <tr>
          <th>id</th>
          <th>name</th>
          <th>age</th>
          <th>des</th>
          <th>password</th>
          <th>option</th>
      </tr>
      </thead>
      <tbody>
      <% user_list.forEach(function( user ){ %>
      <tr>
          <td><%= user._id %></td>
          <td><%= user.name %></td>
          <td><%= user.age %></td>
          <td><%= user.des %></td>
          <td><%= user.password %></td>
          <td><a href="delete?id=<%=user._id%>">Delete</a> | <a href="edit?id=<%=user._id%>">Edit</a> | <a href="detail?id=<%=user._id%>">Detail</a></td>
      </tr>
      <% }); %>
      </tbody>
  </table>
  </body>
</html>
